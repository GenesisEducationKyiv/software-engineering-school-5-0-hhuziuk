{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "index.ts",
    "src/**/*",
    "generated/**/*",
    "playwright.config.ts",
    "test/**/*.ts",
    "jest.config.js",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage"
  ]
}
