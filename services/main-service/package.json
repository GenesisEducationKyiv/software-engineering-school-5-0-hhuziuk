{
  "name": "main-service",
  "version": "1.0.0",
  "description": "Core weather & subscription service",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start:dev": "nest start --watch",
    "serve:html": "npx serve -s html -l 8080",
    "start": "npm run build && node dist/main.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "test:unit": "jest --config jest.config.js",
    "test:integration": "cross-env DOTENV_CONFIG_PATH=.env.test jest --config jest.integration.config.js --runInBand",
    "test:integration:up": "docker compose -f docker-compose.test.yml up -d --build",
    "test:integration:down": "docker compose -f docker-compose.test.yml down --volumes",
    "test:e2e": "npm run serve:html & npx playwright install --with-deps && npx playwright test && kill $!",
    "test": "npm run test:unit && npm run test:integration:up && npm run test:integration && npm run test:integration:down"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.1",
    "@nestjs/core": "^11.1.1",
    "@nestjs/microservices": "^11.1.3",
    "@nestjs/platform-fastify": "^11.1.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@willsoto/nestjs-prometheus": "^6.0.2",
    "axios": "^1.10.0",
    "class-validator": "^0.14.2",
    "dotenv": "^16.5.0",
    "ioredis": "^5.6.1",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "typeorm": "^0.3.24",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "11.0.5",
    "@nestjs/testing": "^11.1.1",
    "@playwright/test": "^1.54.1",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.16.3",
    "@types/nodemailer": "^6.4.17",
    "@types/uuid": "^10.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.28.0",
    "eslint-plugin-prettier": "^5.5.1",
    "jest": "^29.7.0",
    "playwright": "^1.54.1",
    "serve": "^14.2.4",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsarch": "^5.4.1",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.36.0"
  }
}
